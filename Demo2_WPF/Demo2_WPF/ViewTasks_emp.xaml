<Page x:Class="Demo2_WPF.ViewTasks_emp"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Demo2_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ViewTasks_emp">


    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="C:\Users\hp\source\repos\Demo2_WPF\Demo2_WPF\images (5).jfif">

            </ImageBrush>
        </Grid.Background>
        <StackPanel >
            <Label Name="name" HorizontalAlignment="Center" Width="600" FontSize="50" Foreground="White" Margin="0 20 0 0" FontWeight="Bold"></Label>
            <TextBlock FontWeight="Bold" FontSize="20" Foreground="White" Margin="50 30 0 0">Pending / In Progress</TextBlock>
            <DataGrid AutoGenerateColumns="False" Name="pending" Width="600" Margin="0 20 0 0" Height="100">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding TaskID}" Width="150" Header="TaskId"></DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding Title}" Width="150" Header="Title"></DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding Description}" Width="150" Header="Description"></DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding Status}" Width="150" Header="Status"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Margin="50 20 0 0" Orientation="Horizontal">
                <TextBlock FontSize="20" Foreground="White">TaskId :</TextBlock>
                <TextBox Name="t_id" Margin="20 0 0 0" Width="50" Height="40"></TextBox>
                <TextBlock Margin="100 0 0 0" FontSize="20" Foreground="White">Status :</TextBlock>
                <ComboBox Name="combo" Margin="20 0 0 0" Width="150"></ComboBox>
                <Button Margin="80 0 0 0" Background="White" Width="100" Height="40" Click="Button_Click">Save</Button>
            </StackPanel>
            <TextBlock FontWeight="Bold" FontSize="20" Foreground="White" Margin="50 30 0 0">Completed</TextBlock>
            <DataGrid AutoGenerateColumns="False" Name="completed" Width="600" Margin="0 20 0 0" Height="100">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding TaskID}"  Width="150" Header="TaskId"></DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding Title}" Width="150" Header="Title"></DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding Description}" Width="150" Header="Description"></DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding Status}" Width="150" Header="Status"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Page>
