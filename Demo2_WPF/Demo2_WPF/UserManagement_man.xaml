<Page x:Class="Demo2_WPF.UserManagement_man"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Demo2_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserManagement_man">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="C:\Users\hp\source\repos\Demo2_WPF\Demo2_WPF\images (5).jfif">

            </ImageBrush>
        </Grid.Background>
        <StackPanel>
            <StackPanel Margin="0 0 0 -20" Orientation="Horizontal">
                <TextBlock Margin="50" FontSize="20" Foreground="White">Task Id :</TextBlock>
                <TextBox Name="t_id" Width="200" Height="40"></TextBox>
                <TextBlock Margin="100 50 0 0" FontSize="20" Foreground="White">Status :</TextBlock>
                <ComboBox Name="status" Height="40" Margin="20 0 0 0" Width="200"></ComboBox>
            </StackPanel>
            <StackPanel Margin="0 -50" Orientation="Horizontal">
                <TextBlock Margin="50" FontSize="20" Foreground="White">Title :</TextBlock>
                <TextBox Name="title" Margin="25 0 0 0" Width="200" Height="40"></TextBox>
                <TextBlock Margin="50 50 0 0" FontSize="20" Foreground="White">Employeename :</TextBlock>
                <TextBox Name="emp" Width="160" Margin="60 0 0 0" Height="40"></TextBox>
            </StackPanel>
            <StackPanel Margin="0 -20" Orientation="Horizontal">
                <TextBlock Margin="50" FontSize="20" Foreground="White">Description :</TextBlock>
                <TextBox Name="desc" Margin="25 0 0 0" Width="200" Height="40"></TextBox>
            </StackPanel>
            <StackPanel Margin="0 20" Orientation="Horizontal">
                <Button Margin="60 0" Width="150" Height="40" Click="Button_Click">Add</Button>
                <Button Margin="60 0" Width="150" Height="40" Click="Button_Click_2">Edit</Button>
                <Button Margin="60 0" Width="150" Height="40" Click="Button_Click_1">Delete</Button>
            </StackPanel>
            <DataGrid AutoGenerateColumns="False" Name="info" Width="600" Height="120">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Userr.Name}" Width="120" Header="Employee"></DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding TaskID}" Width="120" Header="TaskId"></DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding Title}" Width="120" Header="Title"></DataGridTextColumn>
                    <DataGridTextColumn Width="120"  Binding="{Binding Description}"  Header="Description"></DataGridTextColumn>
                    <DataGridTextColumn Width="120"  Binding="{Binding Status}"  Header="Status"></DataGridTextColumn>
                </DataGrid.Columns>
                
            </DataGrid>
        </StackPanel>
    </Grid>
</Page>
