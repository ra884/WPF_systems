<Page x:Class="Demo2_WPF.LogIn"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Demo2_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LogIn">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="C:\Users\hp\source\repos\Demo2_WPF\Demo2_WPF\images (5).jfif">
               
            </ImageBrush>
        </Grid.Background>
        <StackPanel HorizontalAlignment="Center">
            <TextBlock Margin="0 20 0 0" HorizontalAlignment="Center" Foreground="White" FontWeight="Bold"  FontSize="70">Sign In</TextBlock>
            <StackPanel Margin="0 50 0 0" Orientation="Horizontal">
                <Label Margin="0 0 20 0" Foreground="White" FontSize="20">User Name</Label>
                <TextBox Name="name" Width="500"></TextBox>
            </StackPanel>
            <StackPanel Margin="0 50 0 0" Orientation="Horizontal">
                <Label Margin="0 0 35 0" Foreground="White" FontSize="20">Password</Label>
                <TextBox Name="pass" Width="500"></TextBox>
            </StackPanel>
            <Button Margin="0 80 0 0" Width="150" Height="40" Background="White" FontWeight="Bold" FontSize="20" Click="Button_Click">Log In</Button>
        </StackPanel>
    </Grid>
</Page>
