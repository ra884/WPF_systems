<Page x:Class="Library_WPF_v2.book_details"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library_WPF_v2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="book_details">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="C:\Users\hp\source\repos\Library WPF_v2\Library WPF_v2\pngtree-an-open-book-with-a-purple-background-and-fire-in-the-image_16242978.jpg"></ImageBrush>
        </Grid.Background>
        <StackPanel>
            <TextBlock FontSize="50" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="30">Book Details</TextBlock>
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                <TextBlock  FontSize="20" Foreground="White" Margin="50 0 0 0">Title :</TextBlock>
                    <TextBox VerticalAlignment="Center" FontSize="15" Name="title" Width="300" Height="30" Margin="147 0 0 0"></TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock  FontSize="20" Foreground="White" Margin="50 20 0 0">Author :</TextBlock>
                    <TextBox VerticalAlignment="Center" FontSize="15" Name="author" Width="300" Height="30" Margin="122 20 0 0"></TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontSize="20" Foreground="White" Margin="50 20 0 0">Category :</TextBlock>
                    <TextBox VerticalAlignment="Center" FontSize="15" Name="cat" Width="300" Height="30" Margin="102 20 0 0"></TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontSize="20" Foreground="White" Margin="50 20 0 0">ISBN :</TextBlock>
                    <TextBox VerticalAlignment="Center" FontSize="15" Name="ISBN" Width="300" Height="30" Margin="140 20 0 0"></TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                        <TextBlock FontSize="20" Foreground="White" Margin="50 20 0 0">Quantity :</TextBlock>
                    <TextBox VerticalAlignment="Center" FontSize="15" Name="qua" Width="300" Height="30" Margin="105 20 0 0"></TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                            <TextBlock FontSize="20" Foreground="White" Margin="50 20 0 0">Description :</TextBlock>
                    <TextBox VerticalAlignment="Center" FontSize="15" Name="desc" Width="300" Height="50" Margin="80 20 0 0"></TextBox>
                </StackPanel>
            </StackPanel>
        </StackPanel>
        
    </Grid>
</Page>
