<Page x:Class="Library_WPF_v2.SignUp"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library_WPF_v2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SignUp">

    <Grid >
        <Grid.Background>
            <ImageBrush ImageSource="C:\Users\hp\source\repos\Library WPF_v2\Library WPF_v2\pngtree-an-open-book-with-a-purple-background-and-fire-in-the-image_16242978.jpg"></ImageBrush>
        </Grid.Background>
        <StackPanel>
            <TextBlock Foreground="White" FontWeight="Bold" Margin="10" FontSize="50" HorizontalAlignment="Center">Sing Up</TextBlock>
            <StackPanel Margin="50 0 0 0" Orientation="Horizontal">
                <Label Foreground="White"  FontSize="20">FullName</Label>
                <TextBox Margin="50 0 0 0" BorderBrush="Black" Name="name" Width="600"></TextBox>
            </StackPanel>
            <StackPanel Margin="50 20 0 0" Orientation="Horizontal">
                <Label Foreground="White"  FontSize="20">Email</Label>
                <TextBox Margin="85 0 0 0" BorderBrush="Black" Name="mail" Width="600"></TextBox>
            </StackPanel>
            <StackPanel Margin="50 20 0 0" Orientation="Horizontal">
                <Label Foreground="White"  FontSize="20">Password</Label>
                <PasswordBox Margin="50 0 0 0" BorderBrush="Black" Name="pass" Width="600"></PasswordBox>
            </StackPanel>
            <StackPanel Margin="50 20 0 0" Orientation="Horizontal">
                <Label Foreground="White"  FontSize="20">Password</Label>
                <PasswordBox Margin="50 0 0 0" BorderBrush="Black" Name="confirm" Width="600"></PasswordBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Foreground="White"  Margin="50 30" FontSize="30">Role:</TextBlock>
                <RadioButton Foreground="White"  GroupName="radio" Margin="30 10 0 0" VerticalAlignment="Center" VerticalContentAlignment="Center" Name="mem"  FontSize="20">Member</RadioButton>
                <RadioButton Foreground="White"  GroupName="radio" Margin="30 10 0 0" VerticalAlignment="Center" VerticalContentAlignment="Center" Name="lib"  FontSize="20">Librarian</RadioButton>
            </StackPanel>
            <TextBlock Foreground="White"  Margin="50 -10 0 0" FontSize="17">Already have an acoount?
                <Hyperlink Click="To_login">Login</Hyperlink>
            </TextBlock>
            <Button FontWeight="Bold" FontSize="20" Margin="0 0 0 0" Width="200" Height="40" Click="Button_Click">Sign Up</Button>
        </StackPanel>
    </Grid>
</Page>
