<Page x:Class="Library_WPF_v2.book_filter"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library_WPF_v2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="book_filter">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="C:\Users\hp\source\repos\Library WPF_v2\Library WPF_v2\pngtree-an-open-book-with-a-purple-background-and-fire-in-the-image_16242978.jpg"></ImageBrush>
        </Grid.Background>
        <StackPanel>
            <TextBlock Foreground="White" Margin="30"  HorizontalAlignment="Center" FontSize="50">Filter Books</TextBlock>
            <StackPanel Orientation="Horizontal">
            <TextBlock Foreground="White" Margin="50 -10 0 0"   FontSize="20">Category</TextBlock>
            <ComboBox Name="combo" Margin="40 -5 0 0" Width="200"></ComboBox>
            </StackPanel>
            <CheckBox Name="check" Foreground="White" VerticalContentAlignment="Center" FontSize="20" Margin="50 100 0 0">Available books only</CheckBox>
            <TextBlock Foreground="White" Margin="50 30 0 0" FontSize="20">Sort by :</TextBlock>
            <RadioButton Name="tit" Foreground="White" GroupName="radio" Margin="30 10 0 0" VerticalAlignment="Center" VerticalContentAlignment="Center"  FontSize="20">Title</RadioButton>
            <RadioButton Name="qua" Foreground="White" GroupName="radio" Margin="30 10 0 0" VerticalAlignment="Center" VerticalContentAlignment="Center"   FontSize="20">Quantity</RadioButton>
            <Button Width="200" Height="30" FontWeight="Bold" Background="White" FontSize="20" Click="Button_Click">Filter</Button>
        </StackPanel>
        
    </Grid>
</Page>
