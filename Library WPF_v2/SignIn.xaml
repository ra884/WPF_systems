<Page x:Class="Library_WPF_v2.SignIn"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library_WPF_v2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SignIn">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="C:\Users\hp\source\repos\Library WPF_v2\Library WPF_v2\pngtree-an-open-book-with-a-purple-background-and-fire-in-the-image_16242978.jpg"></ImageBrush>
        </Grid.Background>
        <StackPanel> 
            <TextBlock Foreground="White" Margin="30"  HorizontalAlignment="Center" FontSize="50">Sign In</TextBlock>
            <StackPanel Margin="50 0 0 0" Orientation="Horizontal">
                <Label Foreground="White" FontSize="20">Email</Label>
                <TextBox BorderThickness="2" BorderBrush="Black" Margin="90 0 0 0" Name="mail" Width="600"></TextBox>
            </StackPanel>
            <StackPanel Margin="50 30 0 0" Orientation="Horizontal">
                <Label Foreground="White" FontSize="20">Password</Label>
                <PasswordBox BorderThickness="2" BorderBrush="Black" Margin="55 0 0 0"  Name="pass" Width="600"></PasswordBox>
            </StackPanel>
            <Button Width="150" HorizontalAlignment="Center" BorderThickness="2" BorderBrush="Black" Margin="0 50 0 0" Height="50" Background="White" FontSize="20" FontWeight="Bold" Click="Button_Click">Sign In</Button>
        </StackPanel>
    </Grid>
</Page>
