<Page x:Class="Library_WPF_v2.book_list"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library_WPF_v2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="book_list">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="C:\Users\hp\source\repos\Library WPF_v2\Library WPF_v2\pngtree-an-open-book-with-a-purple-background-and-fire-in-the-image_16242978.jpg"></ImageBrush>
        </Grid.Background>
        <StackPanel>
            <TextBlock FontSize="50" Margin="30" HorizontalAlignment="Center" Foreground="White">Book list</TextBlock>
        <ListBox Name="books_list" Width="500" Height="200" Margin="50 0 0 0" HorizontalAlignment="Center"   >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock  Text="{Binding Title}" FontWeight="Bold" Width="250"/>
                        <TextBlock Text="{Binding Author}" Width="250"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
            <Button Width="200" Height="50" Background="White" Margin="0 30 0 0" FontWeight="Bold" FontSize="15" Click="Button_Click">Show details</Button>
        </StackPanel>
    </Grid>
</Page>
